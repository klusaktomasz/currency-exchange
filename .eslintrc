{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "ignorePatterns": ["docs/**/*"],
  "globals": {
    "window": true,
    "document": true,
    "fetch": true,
    "localStorage": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./src"],
        "extensions": [".js"]
      }
    }
  },
  "rules": {
    "react/jsx-filename-extension": 0,
    "no-param-reassign": 0,
    "import/order": 0,
    "no-debugger": 1,
    "react/prop-types":[1, {
      "ignore": ["className"]
    }]
  }
}